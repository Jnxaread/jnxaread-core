<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">

        <!-- 设定生成的文件不带注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 配置数据库连接 -->
        <jdbcConnection
                driverClass="com.mysql.cj.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/jnxaread?serverTimezone=UTC"
                userId="root"
                password="123">
            <!-- 识别主键 -->
            <property name="useInformationSchema" value="true"/>
            <!-- 只识别指定数据库里的User表 -->
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 指定JavaBean生成的位置 -->
        <javaModelGenerator
                targetPackage="com.jnxaread.bean"
                targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 指定sql映射文件生成的位置 -->
        <sqlMapGenerator
                targetPackage="mapper_temp"
                targetProject=".\src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 指定dao接口生成的位置，mapper接口 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.jnxaread.dao"
                             targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 指定每个表的生成策略 -->
        <!--
            <property name="useActualColumnNames" value="true"/>
            该属性默认为false。
            如果value为true，则MBG自动生成的bean的字段名与数据库表中的字段名
            忽略大小写后相同。例如：数据库表中的字段名为topicTitle，则自动生成的bean的字段名为topictitle。
            如果value为false，则MBG自动生成的bean的字段名时会忽略掉数据库表的字段名中的下划线并使用驼峰命名法。
            例如：数据库表中的字段名为topic_title，则自动生成的bean的字段名为topicTitle。

            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
            使用加入该属性后生成的mapper.xml文件，当数据库表中存在自增主键时，向表中插入新记录
            可以在插入成功后直接获取自增id
        -->
        <table tableName="Access" domainObjectName="Access">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Authority" domainObjectName="Authority">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Board" domainObjectName="Board">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Category" domainObjectName="Category">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Chapter" domainObjectName="Chapter">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Comment" domainObjectName="Comment">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Fiction" domainObjectName="Fiction">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Login" domainObjectName="Login">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Notice" domainObjectName="Notice">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Project" domainObjectName="Project">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Reply" domainObjectName="Reply">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Topic" domainObjectName="Topic">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="User" domainObjectName="User">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="Label" domainObjectName="Label">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>

    </context>
</generatorConfiguration>
